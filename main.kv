                pos_hint: {'center_x': 0.52,'center_y':0.15}
                on_press: root.capture() , root.scann()
                Image:
                    source: 'icon.png'
                    size_hint: .155,.12
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
            RoundedButtontwo:
                markup: True

<MyPopup@Popup>
    auto_dismiss: False
    size_hint: 0.98,0.98
    pos_hint: {"center_x":0.5,"center_y":0.5}
    title: "Credits"
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height
        padding: 20
        Label:
            markup: True
            text: "[font=times]Created By : [b]Mohand Aymn Abd El-kader , ID: 18P6298 [/b] , This is For Machine Vision Course [b](CSE480)[/b]- Spring-23 , Submitted to: [b]Dr.Hossam Hassan[/b] and [b]Eng.Yehia[/b][/font]"
            font_size: 38
            valign: 'top'
            text_size: self.size
        Button:
            markup: True
            text: "[font=times][b]Close me[/b] [/font]"

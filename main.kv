##################### Main Layout ##########################
<MyLayout>
	do_default_tab: False
	size: root.width,root.height
	pos_hint: {'center_x': .5, 'center_y': .5}
	tab_pos: 'top_left'
############################################################
	TabbedPanelItem:
	    markup: True
		text: "[b]Home[/b]"
		font_size: 28
		color: (0,0,0,1)
		background_normal: ""
		background_color:(43.0/255.0,35.0/255.0,119.0/255.0,0.82)
		FloatLayout:
            size: root.width,root.height
            Label:
                markup: True
                text: " [font=times][b]Welcome User[/b][/font]"
                text_size: self.size
                font_size: 39
                color: (0,0,0,1)
                halign: 'center'
                valign: 'middle'
                size_hint: (.5,.2)
                pos_hint: {'center_y':.87,'center_x':0.28}
                background_normal: ""
                background_color: (43.0/255.0,35.0/255.0,119.0/255.0,0.82)
                canvas.before:
                    Color:
                        rgba: self.background_color
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [65]
            Image:
                source: "asu.png"
                size_hint: 0.4,0.4
                allow_stretch: True
                pos_hint:{'center_x':0.78, 'center_y':0.75}
            Image:
                source: 'intro2.jpg'
                size_hint: 0.758,0.35
                allow_stretch: True
                keep_ratio: False
                pos_hint: {'center_y':.177,'center_x':0.38}
            RoundedButton:
                markup: True
                text: "[b][font=times]credits[/font][/b]"
                font_size: 36
                color: (1,0.3,0.6,1)
                size_hint: 0.2,0.18
                pos_hint: {'center_x': 0.88,'center_y':0.14}
                on_release: Factory.MyPopup().open()
###############################################################
	TabbedPanelItem:
		text: "Start Scan"
